<p id="notice"><%= notice %></p>

<h1>Tasks</h1>

<table>
  <thead>
    <tr>
      <th>Status</th>
      <th>Type</th>
      <th>Text</th>
      <th>Task</th>
      <th>Patient</th>
      <th>Provider</th>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.status %></td>
        <td><%= task.type %></td>
        <td><%= task.text %></td>
        <td><%= task.task %></td>
        <td><%= task.patient %></td>
        <td><%= task.provider %></td>
        <td><%= task.title %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Task', new_task_path %>
